#include <stdio.h>

int main() {
    char characters[100]; // ตัวแปรเพื่อเก็บอักขระ
    int index = 0; // ตัวนับสำหรับตำแหน่งในอาเรย์

    printf("Enter 1 character:\n");

    while (1) {
        char ch;
        scanf(" %c", &ch); // อ่านตัวอักษรจากผู้ใช้

        // ตรวจสอบว่าเป็น 'Y' หรือ 'y' หรือไม่
        if (ch == 'Y' || ch == 'y') {
            break; // ถ้าใช่ให้หยุด
        }

        // เก็บตัวอักษรลงในอาเรย์
        characters[index] = ch;
        index++;
    }

    // แสดงผลลัพธ์
    printf("String = ");
    for (int i = 0; i < index; i++) {
        printf("%c ", characters[i]); // แสดงแต่ละตัวอักษร
    }
    printf("\n");

    return 0;
}
